<section class="main-content">
    <h1> <%= @brand.name %>'s snacks </h1>
    <div class="row">
        <% @brand.products.each do |product| %>
        <div class="col-3">
           <%= link_to image_tag(product.product_image, :class => "img-fluid"), product %>
            <%= link_to product.product_name, product %>
        </div>
    <% end %>
    </div>
</section>