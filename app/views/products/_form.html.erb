<%= form_for @product do |f| %>
        <div class="form-group">
            <%= f.label :product_name %>
            <%= f.text_field :product_name %>
        </div>
        <div class="form-group">
            <%= f.label :brand_id %>
            <%= f.select :brand_id, Brand.pluck(:name, :id), :include_blank => true %>
        </div>
        <div class="form-group">
            <%= f.label :product_image %>
            <%= f.file_field :product_image %>
        </div>
        <div class="form-group">
            <%= f.label :calorie %>
            <%= f.text_field :calorie %>
        </div>
        <div class="form-group">
            <%= f.label :protein %>
            <%= f.text_field :protein %>
        </div>
        <div class="form-group">
            <%= f.label :carb %>
            <%= f.text_field :carb %>
        </div>        
        <div class="form-group">
            <%= f.label :fat %>
            <%= f.text_field :fat %>
        </div>
        <div class="form-group">
            <%= f.submit "Submit", class: "btn btn-primary" %>
        </div>
    <% end %>