<% provide(:title, "Home") %>
<!DOCTYPE html>
<html>
  <head>
    <title>Purotein | <%= yield(:title) %> </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <header>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
      <%= link_to "PUROTEIN", '/', id: "logo", class: "navbar-brand" %>
      <nav>
        <ul class="nav navbar-nav navbar-right">
          <li><%= link_to "all snacks",   '#' , class: "nav-link" %></li>
          <li><%= link_to "+ add snack",   '#' , class: "nav-link" %></li>
          <% if logged_in? %>
            <li><%= link_to @user.name, '#', class: "nav-link" %></li>
            <li><%= link_to "log out", '/logout' , class: "nav-link" %></li>
          <% else %>
            <li><%= link_to "log in", '/login' , class: "nav-link" %></li>
            <li><%= link_to "sign up", '/signup' , class: "nav-link" %></li>
          <% end %>
        </ul>
      </nav>
    </div>
    </nav>
  </header>

    <div class="container">
          <% flash.each do |message_type, message| %>
            <div class="alert alert-<%= message_type %>"><%= message %></div>
          <% end %>
      <%= yield %>
    </div>
  </body>
</html>
